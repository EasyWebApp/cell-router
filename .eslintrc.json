{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error", 4, {"SwitchCase": 1}
        ],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-cond-assign": "off",
        "no-console": ["error", {
            "allow": ["info", "warn", "error", "time", "timeEnd"]
        }],
        "valid-jsdoc": ["error", {
            "requireParamDescription": false,
            "requireReturn": false,
            "requireReturnDescription": false
        }]
    }
}
